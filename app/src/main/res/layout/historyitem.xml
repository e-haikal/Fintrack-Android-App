<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"


    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/listImage"
            android:scaleType="centerCrop"
            android:src="@drawable/arcticons_moneycontrol"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"

            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/listname"
            android:text="nama item"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/listImage"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/listcategory"
            android:text="Makanan"
            android:textSize="14sp"


            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/listtanggal"
            android:text="24/06/2024"
            android:textSize="14sp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="100dp"
            android:layout_below="@id/listname"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/listammount"
            android:text="+100,000"
            android:textSize="10sp"
            android:textColor="@color/tahiti_gold"
            android:layout_marginTop="25dp"
            android:layout_marginStart="100dp"
            android:layout_toEndOf="@id/listname"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>